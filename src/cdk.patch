- */
-static void destroyInfo (CDKVIEWER *viewer)
-{
-   CDKfreeChtypes (viewer->list);
-   freeChecked (viewer->listPos);
-   freeChecked (viewer->listLen);
-
-   viewer->list = 0;
-   viewer->listPos = 0;
-   viewer->listLen = 0;
-}
